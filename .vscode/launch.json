{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C++",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/debug/${fileBasenameNoExtension}.exe",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "preLaunchTask": "Build C/C++ Project",
      "externalConsole": true,
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}